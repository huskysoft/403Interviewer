<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
	

	<color name="white">#FFFFFF</color>
    <color name="white_opaque">#999999</color>
	<color name="pitch_black">#FF000000</color>
	
	<!-- <color name="light_purple">#D166FF</color> -->
	<color name="light_purple">#39275B</color>
	
	<!-- <color name="gold">#FFCC00</color> -->
	<color name="gold">#C79900</color>
	
	<color name="sliding_menu">#e6e4e9</color>
	
	<!-- Default theme for the App -->
    <style name="AppTheme" parent="android:Theme.Light">

    </style>
    
    <!-- Loading indicator -->
	<style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:indeterminate">true</item> 
	</style>
</resources>